<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_hub"
    tools:context=".MainActivity">

    <!-- Cabeçalho -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/cabecalho_retrato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Container dos 3 cards -->
    <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="0dp"
        android:layout_height="@dimen/cards_container_height"
        android:layout_marginTop="@dimen/cards_margin_top"
        android:layout_marginBottom="@dimen/cards_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/cards_padding_start"
        android:paddingEnd="@dimen/cards_padding_end"
        app:layout_constraintBottom_toTopOf="@id/footerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerImage">

        <ImageView
            android:id="@+id/basquete_card"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_height"
            android:layout_marginEnd="@dimen/card_margin_end"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/basquete_desc"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/basquete_card" />

        <ImageView
            android:id="@+id/calculadora_card"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_height"
            android:layout_marginEnd="@dimen/card_margin_end"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/calculadora_desc"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/calculadora_card" />

        <ImageView
            android:id="@+id/conversor_card"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_height"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/conversor_desc"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/conversor_card" />
    </LinearLayout>

    <!-- Rodapé -->
    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="0dp"
        android:layout_height="@dimen/footer_height"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/footer_padding_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Imagem canto esquerdo -->
        <ImageView
            android:id="@+id/zumbi_icon"
            android:layout_width="@dimen/footer_zumbi_icon_size"
            android:layout_height="@dimen/footer_zumbi_icon_size"
            android:contentDescription="@string/zumbi_desc"
            android:scaleType="fitEnd"
            android:src="@drawable/zumbi" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Botão de troca de tema (à direita) -->
        <ImageView
            android:id="@+id/themeSwitch"
            android:layout_width="@dimen/footer_theme_switch_size"
            android:layout_height="@dimen/footer_theme_switch_size"
            android:layout_marginTop="@dimen/footer_margin_top"
            android:layout_marginBottom="@dimen/footer_margin_bottom"
            android:clickable="true"
            android:contentDescription="@string/theme_switch"
            android:focusable="true"
            android:src="@drawable/hub_modo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
