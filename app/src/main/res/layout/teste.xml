<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_hub"
    tools:context=".MainActivity"> <!-- Cabeçalho -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cabecalho_retrato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- 25% da altura da tela --> <!-- Container dos 3 cards -->
    <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@id/footerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerImage">

        <ImageView
            android:id="@+id/basquete_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.9"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/basquete_desc"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/basquete_card" />

        <ImageView
            android:id="@+id/calculadora_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.9"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/calculadora_desc"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/calculadora_card" />

        <ImageView
            android:id="@+id/conversor_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:contentDescription="@string/conversor_desc"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/conversor_card" />
    </LinearLayout> <!-- Rodapé -->
    <LinearLayout
        android:id="@+id/footerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"> <!-- aumentei a altura --> <!-- Imagem canto esquerdo -->
        <ImageView
            android:id="@+id/zumbi_icon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="@string/zumbi_desc"
            android:scaleType="fitEnd"
            android:src="@drawable/zumbi" /> <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" /> <!-- Botão de troca de tema (à direita) -->
        <ImageView
            android:id="@+id/themeSwitch"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:contentDescription="@string/theme_switch"
            android:focusable="true"
            android:src="@drawable/hub_modo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>